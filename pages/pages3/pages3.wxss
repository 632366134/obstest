.progress-box {

    position: fixed;
    top: 50%;
    left: 10%;
    width: 80%;
    height: 40rpx;
}

.loadText {
    text-align: center;
    margin-bottom: 20rpx;
}

.red {
    position: fixed;
    bottom: 15%;
    width: 100%;
    height: 70%;
}

.red image {
    width: 100%;
    height: 100%;
}

.text_1 {
    position: absolute;
    bottom: 22%;
    left: 50%;
    font-weight: 400;
    color: #FFC100;
    font-size: 100rpx;
    font-family: Microsoft YaHei;
    color: #FFFFFF;
    transform: translateX(-50%);
}

.text_2 {
    position: absolute;
    bottom:12%;
    left: 50%;
    transform: translateX(-50%);
    font-size: 32rpx;
    font-family: Microsoft YaHei;

.redList {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    z-index: 999;
    background-color: rgba(244, 244, 244, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.navigateback {
    width: 100%;
    position: fixed;
    top: 60rpx;
    left: 0;
    z-index: 99;
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #020202;
    line-height: 44rpx;
    text-align: center;
}

.navigateback-x {
    width: 100%;
    text-align: center;
    position: fixed;
    top: 100rpx;
    left: 0;
    z-index: 99;
    font-size: 34rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #020202;
    line-height: 88rpx;
}

.backbtn {
    position: fixed;
    top: 60rpx;
    width: 44rpx;
    height: 42rpx;
    left: 20rpx;
    z-index: 99;
}

.backbtn-x {
    position: fixed;
    top: 124rpx;
    left: 20rpx;
    width: 44rpx;
    height: 42rpx;
    z-index: 99;
}

.back {
    margin-left: 10rpx;
    width: 24rpx;
    height: 42rpx;
}

.main {
    margin-top: 10rpx;
    width: 710rpx;
    height: calc(100% - 188rpx);
}

.box {
    margin-bottom: 20rpx;
    width: 710rpx;
    height: auto;
    background: #FFFFFF;
    border-radius: 30rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.top {
    width: 100%;
    height: 180rpx;
    box-sizing: border-box;
    padding: 30rpx 0 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #DCDCDC;
}

.bottom {
    margin-top: 30rpx;
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #959595;
}

.left {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.right {
    direction: rtl;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.smallText {
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #959595;
}

.margin {
    margin-top: 20rpx;
    font-size: 24rpx;

}

.redText {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #F24627;
}

.price2 {
    font-size:60rpx;
    font-weight: 800;
}